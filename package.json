    "karma-jasmine-html-reporter": "^1.5.0",
    "karma-safari-launcher": "~1.0.0",
    "ng-packagr": "^18.2.1",
    "protractor": "~7.0.0",
    "rxjs": "~6.6.3",
    "sass": "^1.29.0",
    "ts-node": "~9.0.0",
    "tslint": "~6.1.0",
    "typescript": "~5.4.5",
    "zone.js": "~0.14.10"
